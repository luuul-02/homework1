<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EasyActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="541dp"
        android:layout_weight="1"
        android:background="#c8cbfd">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#000000"
            android:paddingLeft="145dp"
            android:paddingTop="3dp"
            android:text="Ranking"
            android:textSize="35dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF">
        </TextView>

        <Button
            android:id="@+id/btn_rk"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/rk_btn" />

        <LinearLayout
            android:layout_marginTop="55dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="220dp"
                    android:text="Easy"
                    android:paddingTop="70dp"
                    android:paddingLeft="50dp"
                    android:textSize="30dp"
                    android:textColor="#000000"
                    android:layout_marginTop="10dp">
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="80dp"
                            android:text="1등 : "
                            android:paddingTop="20dp"
                            android:paddingLeft="20dp"
                            android:textSize="25dp"
                            android:textColor="#000000">
                        </TextView>
                        <TextView
                            android:id="@+id/tv_etime1"
                            android:layout_width="185dp"
                            android:layout_height="80dp"
                            android:paddingTop="20dp"
                            android:paddingLeft="20dp"
                            android:textSize="25dp"
                            android:textColor="#000000">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="80dp"
                            android:text="2등 : "
                            android:paddingTop="20dp"
                            android:paddingLeft="20dp"
                            android:textSize="25dp"
                            android:textColor="#000000">
                        </TextView>
                        <TextView
                            android:id="@+id/tv_etime2"
                            android:layout_width="185dp"
                            android:layout_height="80dp"
                            android:paddingTop="20dp"
                            android:paddingLeft="20dp"
                            android:textSize="25dp"
                            android:textColor="#000000">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="80dp"
                            android:text="3등 : "
                            android:paddingTop="20dp"
                            android:paddingLeft="20dp"
                            android:textSize="25dp"
                            android:textColor="#000000">
                        </TextView>

                        <TextView
                            android:id="@+id/tv_etime3"
                            android:layout_width="185dp"
                            android:layout_height="80dp"
                            android:paddingTop="20dp"
                            android:paddingLeft="20dp"
                            android:textSize="25dp"
                            android:textColor="#000000">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="220dp"
                    android:text="Normal"
                    android:paddingTop="70dp"
                    android:paddingLeft="30dp"
                    android:textSize="30dp"
                    android:textColor="#000000"
                    android:layout_marginTop="10dp">
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="215dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="80dp"
                            android:text="1등 : "
                            android:paddingTop="20dp"
                            android:paddingLeft="20dp"
                            android:textSize="25dp"
                            android:textColor="#000000">
                        </TextView>
                        <TextView
                            android:id="@+id/tv_ntime1"
                            android:layout_width="185dp"
                            android:layout_height="80dp"
                            android:paddingTop="20dp"
                            android:paddingLeft="20dp"
                            android:textSize="25dp"
                            android:textColor="#000000">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="80dp"
                            android:text="2등 : "
                            android:paddingTop="20dp"
                            android:paddingLeft="20dp"
                            android:textSize="25dp"
                            android:textColor="#000000">
                        </TextView>
                        <TextView
                            android:id="@+id/tv_ntime2"
                            android:layout_width="185dp"
                            android:layout_height="80dp"
                            android:paddingTop="20dp"
                            android:paddingLeft="20dp"
                            android:textSize="25dp"
                            android:textColor="#000000">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="65dp"
                            android:text="3등 : "
                            android:paddingTop="15dp"
                            android:paddingLeft="20dp"
                            android:textSize="25dp"
                            android:textColor="#000000">
                        </TextView>
                        <TextView
                            android:id="@+id/tv_ntime3"
                            android:layout_width="185dp"
                            android:layout_height="80dp"
                            android:paddingTop="20dp"
                            android:paddingLeft="20dp"
                            android:textSize="25dp"
                            android:textColor="#000000">
                        </TextView>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="205dp"
                    android:text="Hard"
                    android:paddingTop="70dp"
                    android:paddingLeft="50dp"
                    android:textSize="30dp"
                    android:textColor="#000000"
                    android:layout_marginTop="10dp">
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="215dp"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="80dp"
                            android:text="1등 : "
                            android:paddingTop="20dp"
                            android:paddingLeft="20dp"
                            android:textSize="25dp"
                            android:textColor="#000000">
                        </TextView>
                        <TextView
                            android:id="@+id/tv_htime1"
                            android:layout_width="185dp"
                            android:layout_height="80dp"
                            android:paddingTop="20dp"
                            android:paddingLeft="20dp"
                            android:textSize="25dp"
                            android:textColor="#000000">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="70dp"
                            android:text="2등 : "
                            android:paddingTop="20dp"
                            android:paddingLeft="20dp"
                            android:textSize="25dp"
                            android:textColor="#000000">
                        </TextView>
                        <TextView
                            android:id="@+id/tv_htime2"
                            android:layout_width="185dp"
                            android:layout_height="80dp"
                            android:paddingTop="20dp"
                            android:paddingLeft="20dp"
                            android:textSize="25dp"
                            android:textColor="#000000">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="65dp"
                            android:text="3등 : "
                            android:paddingTop="20dp"
                            android:paddingLeft="20dp"
                            android:textSize="25dp"
                            android:textColor="#000000">
                        </TextView>
                        <TextView
                            android:id="@+id/tv_htime3"
                            android:layout_width="185dp"
                            android:layout_height="80dp"
                            android:paddingTop="20dp"
                            android:paddingLeft="20dp"
                            android:textSize="25dp"
                            android:textColor="#000000">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

</LinearLayout>